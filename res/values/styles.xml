<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="normalpopupanimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <style name="middlepopupanimation">
        <item name="android:windowEnterAnimation">@anim/middle_fade_in</item>
        <item name="android:windowExitAnimation">@anim/middle_fade_out</item>
    </style>
    
    <style name="centerpopupanimation">
        <item name="android:windowEnterAnimation">@anim/center_fade_in</item>
        <item name="android:windowExitAnimation">@anim/center_fade_out</item>
    </style>

    <style name="settings_listview_checkboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/settings_item_selector</item>
        <item name="android:maxWidth">45dip</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="selection_checkboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/point_bg</item>
        <item name="android:maxWidth">45dip</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>